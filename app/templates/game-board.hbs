{{page-title "GameBoard"}}
{{#if this.model.data.current_game_board.id}}
    <div>
        <div class="game">
            <div class="small-board">
                {{#each this.model.data.turns as |turns_tile|}}
                    <div id="{{turns_tile.tile_position}}" class="each-board {{turns_tile.tile_type}}" {{action "handleClick" this.model}}><div class="turn"></div> </div>
                {{/each}}
            </div>
        </div>
        {{log this.help}}
        <div class="stats pt-2 row justify-content-lg-center">
            <div class="player-o col-1">
                    <p>PLAYER O</p>
                    <p>{{if this.oCount this.oCount this.model.data.winner_count.O}}</p>
            </div>
            <div class="col-1">
                    <p>TIE</p>
                    <p>{{if this.tieCount this.tieCount this.model.data.winner_count.tie}}</p>
            </div>
            <div class="player-x col-1">
                    <p>PLAYER X</p>
                    <p>{{if this.xCount this.xCount this.model.data.winner_count.X}}</p>
            </div>
        </div>
        <div class="pb-5">
            <button class="reset button-33" type="button" {{action "handleReset"}}>Reset Board</button>
        </div>
    </div>
{{/if}}
{{outlet}}
